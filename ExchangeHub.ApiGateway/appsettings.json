{
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5000"
            }
        }
    },
    "ReverseProxy": {
        "Clusters": {
            "users": {
                "Destinations": {
                    "d1": { "Address": "http://userservice:5001/" }
                }
            },
            "finance": {
                "Destinations": {
                    "d1": { "Address": "http://financeservice:5002/" }
                }
            }
        },
        "Routes": [
            {
                "RouteId": "auth",
                "ClusterId": "users",
                "Match": { "Path": "/api/auth/{**catch-all}" }
            },
            {
                "RouteId": "user",
                "ClusterId": "users",
                "Match": { "Path": "/api/user/{**catch-all}" }
            },
            {
                "RouteId": "finance",
                "ClusterId": "finance",
                "Match": { "Path": "/api/finance/{**catch-all}" }
            }
        ]
    }
}
